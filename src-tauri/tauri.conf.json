{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "bili-bot",
    "version": "../package.json"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": true,
      "fs": {
        "scope": [
          "**"
        ]
      },
      "http": {
        "request": true,
        "scope": [
          "https://**",
          "http://**"
        ]
      },
      "shell": {
        "execute": true,
        "scope": [
          {
            "name": "record-live",
            "cmd": "ffmpeg",
            "args": true
          },
          {
            "name": "ffmpeg-version",
            "cmd": "ffmpeg",
            "args": [
              "-version"
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "bili-bot",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "hdslb.com",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": false,
        "title": "哔哩哔哩直播助手",
        "width": 800,
        "decorations": false
      }
    ],
    "systemTray": {
      "iconPath": "assets/tray.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
}
